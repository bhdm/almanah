<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    {% block javascript %}
        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
        <script src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}"></script>
        <script src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('assets/vendor/owl.carousel/dist/owl.carousel.min.js') }}"></script>
        <script src="{{ asset('assets/vendor/chosen/chosen.jquery.min.js') }}"></script>
        <script src="{{ asset('assets/vendor/bootstrap-multiselect/dist/js/bootstrap-multiselect.js') }}"></script>

        <script src="{{ asset('assets/vendor/jquery-mask-plugin/dist/jquery.mask.min.js') }}"></script>

        <script src="{{ asset('assets/vendor/hinclude/hinclude.js') }}"></script>

        <script src="{{ asset('bundles/app/js/main.js') }}"></script>
        <script>
            $(document).ready(function() {
                $('.multiselect').multiselect({
                    maxHeight: 300,
//                            numberDisplayed: 5,
                    includeSelectAllOption: true
                });
            });
        </script>
    {% endblock %}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/vendor/reset-css/reset.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.css') }}">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

        <link rel="stylesheet" href="{{ asset('assets/vendor/owl.carousel/dist/assets/owl.carousel.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/vendor/chosen/chosen.min.css') }}">

        {#<link rel="stylesheet" href="{{ asset('bundles/app/css/checkbox.css') }}">#}
        <link href="{{ asset('assets/vendor/bootstrap-multiselect/dist/css/bootstrap-multiselect.css') }}" rel="stylesheet">
        {% stylesheets "@AppBundle/Resources/public/less/common.less" %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="all" />
        {% endstylesheets %}

        {#{% if app.request.attributes.get('_route') != 'homepage' %}#}
            {#<link rel="stylesheet" href="{{ asset('bundles/app/less/menu.css') }}">#}
            {#{% stylesheets "@AppBundle/Resources/public/less/menu.less" %}#}
            {#<link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="all" />#}
            {#{% endstylesheets %}#}
        {#{% endif %}#}

    {% endblock %}
</head>
<body>
<div class="body">
    <div class="container-fluid">
        <header>
            <div class="row">
                <div class="col-xs-3">
                    <div style="width: 250px">
                        <a href="{{ path('homepage') }}">
                            <img src="{{ asset('bundles/app/images/logo.png') }}" id="logo" style=" float: left">
                        </a>
                    </div>
                </div>
                <div class="col-xs-6 text-right">
                    <form class="navbar-form navbar-right" role="search" action="{{ path('search') }}">
                        <div class="form-group">
                            <input type="text" class="form-control" id="search" placeholder="Поиск событий" name="search">
                        </div>
                        <button type="submit" class="btn btn-primary" style="margin-left: -4px;">Найти</button>
                    </form>
                </div>
                <div class="col-xs-3">
                    {% if app.user != null %}
                        <div class="navbar-form navbar-right">
                            <div class="dropdown">
                                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    {{ app.user.lastName~' '~app.user.firstName }}
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-top" aria-labelledby="dropdownMenu1">
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <li><a href="{{ path('admin_main') }}">В админ панель</a></li>
                                    {% endif %}
                                    <li><a href="{{ path('fos_user_profile_edit') }}">В профиль</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a href="{{ path('fos_user_security_logout') }}">Выйти</a></li>
                                </ul>
                            </div>
                        </div>
                    {% else %}
                        <div class="navbar-form navbar-right">
                            <button class="btn btn-primary" id="login">Вход</button>
                        </div>
                        <div class="register-btn">
                            {#<a href="{{ path('fos_user_registration_register') }}">Регистрация</a>#}
                        </div>
                    {% endif %}
                </div>
            </div>
        </header>
        {% if app.request.attributes.get('_route') == 'homepage' %}
            <div class="slider ">
                {{ render(controller("AppBundle:Default:carusel" )) }}
            </div>
        {% endif %}
        {{ include('@App/menu.html.twig') }}
        <div class="content">
            {% block content %}
                {#<div class="row">#}
                    {#<div class="col-xs-9">#}
                        {#{% block content %}{% endblock %}#}
                    {#</div>#}
                    {#<div class="col-xs-3 text-right">#}
                        {#{{ render(controller("AppBundle:Widget:banner" )) }}#}
                    {#</div>#}
                {#</div>#}
            {% endblock %}
        </div>
    </div>
    <footer>
        <div class="row footer1">
            <div class="col-xs-offset-1 col-xs-5" style="border-right: 1px solid #fc113c ">
                <div class="social text-center">
                    <br />
                    <br />
                    <div>
                        {#<a target="_blank" href="https://vk.com/public73072501"><img src="{{ asset('bundles/app/images/icons/vk.png') }}" class="social-icon"></a>#}
                        {#<a target="_blank" href="https://www.facebook.com/euat.org/"><img src="{{ asset('bundles/app/images/icons/fb.png') }}" class="social-icon"></a>#}
                        {#<a target="_blank" href="https://twitter.com/EuatInfo"><img src="{{ asset('bundles/app/images/icons/tw.png') }}" class="social-icon"></a>#}
                        {#<a target="_blank" href="https://www.youtube.com/channel/UCgS0JAUqUpDojH6rIDXGfZA"><img src="{{ asset('bundles/app/images/icons/gp.png') }}" class="social-icon"></a>#}
                        {#<a target="_blank" href="http://ok.ru/group/57034519412770"><img src="{{ asset('bundles/app/images/icons/od.png') }}" class="social-icon"></a>#}
                        <img src="{{ asset('bundles/app/images/icons/icons.png') }}">
                    </div>
                </div>
                <div class="contacts row">
                    <br /><br />
                    <div class="col-xs-offset-1 col-xs-2">
                        <img src="{{ asset('bundles/app/images/icons/geo.png') }}" class="contact-icon" style="margin-top: -8px;">
                    </div>
                    <div class="col-xs-9">
                        <div class="text-uppercase" style="color: #7e7878">
                            Москва, ул. Радищевская, 16,7 <br />
                            ТЕЛ.: +7 495 789 34 67
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-6" style="padding-left: 65px">
                <div>
                    <ul class="footer-other">
                        <li>
                            <a href="{{ path('page',{'url' : 'about'}) }}">О НАС</a>
                        </li>
                        <li>
                            <a href="{{ path('page',{'url' : 'politicy'}) }}">ПОЛИТИКА РЕДАКЦИИ</a>
                        </li>
                        <li>
                            <a href="{{ path('page',{'url' : 'eula'}) }}">ПОЛЬЗОВАТЕЛЬСКОЕ СОГЛАШЕНИЕ</a>
                        </li>
                        <li>
                            <a href="{{ path('page',{'url' : 'partners'}) }}">ПАРТНЕРЫ</a>
                        </li>
                        <li>
                            <a href="{{ path('page',{'url' : 'contacts'}) }}">КОНТАКТЫ</a>
                        </li>
                        <li>
                            <a href="{{ path('page',{'url' : 'feedback'}) }}">ОБРАТНАЯ СВЯЗЬ</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
</div>
{% block modal %}{% endblock %}
{% include "@App/Modal/login.html.twig" %}
