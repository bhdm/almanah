{% extends 'AppBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets "@AppBundle/Resources/public/less/comments.less" %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="all" />
    {% endstylesheets %}
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('assets/vendor/moment/moment.js') }}"></script>
    <script src="{{ asset('assets/vendor/moment/locale/ru.js') }}"></script>
    <script src="{{ asset('assets/vendor/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js') }}"></script>
{% endblock %}

{% block content %}
    <div class="col-xs-7 col-xs-offset-1" style="padding-right: 0">
        <br />
        <div class="row">
            <div class="col-xs-4">
                <img src="{{ event.preview.path }}" class="img-thumbnail">
            </div>
            <div class="col-xs-6">
                <h1 class="blue-text" style="margin-top: 0">{{ event.title }}</h1>
                <ul class="event-params">
                    {% if event.specialties | length > 0 %}
                        <li><b>Специальности:</b>
                            {% for s in event.specialties %}
                                {{ s.title }}
                                {% if s != event.specialties | last %}
                                    ,
                                {% endif %}
                            {% endfor %}
                        </li>
                    {% endif %}

                    {% if event.start != null %}
                        <li>
                            <b>Дата начала:</b>     {{ event.start | date('d.m.Y') }}
                        </li>
                    {% endif %}
                    {% if event.end != null %}
                        <li><b>Дата окончания:</b>  {{ event.end  | date('d.m.Y') }}</li>
                    {% endif %}
                    {% if event.city != null %}
                        <li><b>Город:</b>           {{ event.city  }}</li>
                    {% endif %}
                    {% if event.adrs != null %}
                        <li><b>Адрес:</b>           {{ event.adrs }}</li>
                    {% endif %}
                    {% if event.contacts != null %}
                        <li><b>Контактная информация:</b> {{ event.contacts }}</li>
                    {% endif %}
                    {% if event.source != null %}
                        <li><b>Сайт:</b> <a href="{{ event.source }}" target="_blank">{{ event.source  }}</a></li>
                    {% endif %}

                </ul>
            </div>
        </div>
        <hr />
        <div class="body">
            {{ event.body | raw }}
        </div>
        <hr />
        <div class="row">
            <span style="font-size: 14px; float: left;padding-top: 8px;padding-left: 15px;">Расказать друзьям&nbsp;&nbsp;</span>
            <div class="col-xs-8" style="padding-top: 5px;">
                <script type="text/javascript" src="//yastatic.net/es5-shims/0.0.2/es5-shims.min.js" charset="utf-8"></script>
                <script type="text/javascript" src="//yastatic.net/share2/share.js" charset="utf-8"></script>
                <span class="ya-share2" data-services="vkontakte,facebook,odnoklassniki,gplus,twitter" data-counter="" style="text-align: left; "></span>
            </div>
        </div>
    </div>
    <div class="col-xs-3">
        <div style="max-width: 240px; float: right;" class="text-left">
            {% if importants | length > 0 %}
                <div class="title"><div>ВАЖНЫЕ СОБЫТИЯ</div></div>
                {% for i in importants %}
                    <div class="calendar">
                        <div class="date">{{ i.datetime | date('d.m.Y') }}</div>
                        <div class="annotate">
                            {#{{ i.type }}<br />#}
                            {{ i.title }}
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
            {{ render(controller("AppBundle:Widget:banner" )) }}
        </div>
    </div>

{% endblock %}